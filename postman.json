    "/api/v2/espresso/company": {
      "post": {
        "tags": ["Espresso - Create [Should be protected]"],
        "description": "Create a new company",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "company_name": {
                    "type": "string",
                    "description": "Company name"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Company created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "company_id": {
                      "type": "string",
                      "description": "Id of the created company"
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Company name already exists",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "description": "Company name already exists"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error creating company",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "description": "Error creating company"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
